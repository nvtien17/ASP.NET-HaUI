<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        lable{
            margin: 10px;
        }
        .menulist{
            text-align:center;
            width:100%
        }
    </style>
</head>
<body>
    
    <div class="menulist">
        <lable>@Html.ActionLink("Xem danh sách", "Index", "NhanViens")</lable>
        <lable>@Html.ActionLink("Thêm nhân viên", "Create", "NhanViens")</lable>
        <lable>
            @{
                Html.RenderAction("Menu", "NhanViens");
            }
        </lable>
        @if (Session["username"] == null)
        {
            <lable>@Html.ActionLink("Login", "Login", "Login")</lable>
        }
        else
        {
            <lable>Welcome @Session["username"]</lable>
            <lable>@Html.ActionLink("Logout", "Logout", "Login")</lable>

        }
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
