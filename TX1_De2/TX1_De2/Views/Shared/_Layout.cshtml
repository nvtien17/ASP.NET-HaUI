<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        html{
            font-family: Calibri
        }
        h1 {
            text-align: center;
            padding: 20px;
            margin-block-start: 0;
            margin-block-end: 0;
            margin-inline-start: 0px;
            margin-inline-end: 0px;
        }
        body{
            padding:50px 100px;
            background-color: #c3c3c3;
        }
        .showscreen{
            background : white;
        }
        .menu{
            background-color: #99d9ea;
        }
        .banner{
            background-color:#00a2e8;
        }
        .nav-menu {
            padding : 10px 0;
            display: flex;
            justify-content: space-evenly;
            align-items: center;
            list-style: none;
            margin-block-start: 0;
            margin-block-end: 0;
            margin-inline-start: 0px;
            margin-inline-end: 0px;
        }
        .container{
            padding:20px;
        }
    </style>
</head>
<body>
    <div class="showscreen">
        <div class="banner">
            <h1>Kiểm tra thường xuyên 1</h1>
        </div>
        <div class="menu">
                    <ul class="nav-menu">
                        <li>@Html.ActionLink("Hiển thị danh sách", "ShowList", "QuanLyNhanVien")</li>
                        <li>@Html.ActionLink("Nhập dữ liệu", "Nhap", "QuanLyNhanVien")</li>
                    </ul>
        </div>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>Nguyen Van Tien</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </div>
   
</body>
</html>
