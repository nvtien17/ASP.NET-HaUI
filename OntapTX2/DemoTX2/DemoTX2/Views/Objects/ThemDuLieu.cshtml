@model DemoTX2.Models.Product

@{
    ViewBag.Title = "ThemDuLieu";
}

<h2>Thêm dữ liệu</h2>


@using (Html.BeginForm("ThemDuLieu","Objects", FormMethod.Post, new {enctype = "multipart/form-data"}))
{
    @Html.AntiForgeryToken()

    <div>
        <h4>Sản phẩm</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div>
            @Html.Label("Mã sản phẩm")
            <div>
                @Html.EditorFor(model => model.ProductID)
                @Html.ValidationMessageFor(model => model.ProductID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div>
            @Html.Label("Tên sản phẩm")
            <div>
                @Html.EditorFor(model => model.ProductName)
                @Html.ValidationMessageFor(model => model.ProductName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div>
            @Html.Label("Mô tả")
            <div>
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div>
            @Html.Label("Giá nhập")
            <div>
                @Html.EditorFor(model => model.PurchasePrice)
                @Html.ValidationMessageFor(model => model.PurchasePrice, "", new { @class = "text-danger" })
            </div>
        </div>

        <div>
            @Html.Label("Giá bán")
            <div>
                @Html.EditorFor(model => model.Price)
                @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
            </div>
        </div>

        <div>
            @Html.Label("Số lượng")
            <div>
                @Html.EditorFor(model => model.Quantity)
                @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
            </div>
        </div>

        <div>
            @Html.Label("Năm sản xuất")
            <div>
                @Html.EditorFor(model => model.Vintage)
                @Html.ValidationMessageFor(model => model.Vintage, "", new { @class = "text-danger" })
            </div>
        </div>

        <div>
            @Html.Label("Danh mục sản phẩm")
            <div>
                @Html.DropDownList("CatalogyID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CatalogyID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div>
            @Html.Label("Hình ảnh")
            <div>
                <input type="file" name="Image" value="" onchange="loadFile(event)" />
                <img src="" alt="Alternate Text" width="100" id="img" />

            </div>
        </div>

        <div>
            @Html.Label("Vùng")
            <div>
                @Html.EditorFor(model => model.Region)
                @Html.ValidationMessageFor(model => model.Region, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm mới" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Xem danh sách", "XemDanhSach")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script>
    var loadFile = function (event) {
        var img = document.getElementById("img");
        img.src = URL.createObjectURL(event.target.files[0]);
    }
</script>
@if (ViewBag.error != null)
            {
                <div class="alert-danger">@ViewBag.error</div>
            }