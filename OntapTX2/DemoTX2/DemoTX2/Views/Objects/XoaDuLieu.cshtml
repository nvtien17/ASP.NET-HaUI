@model DemoTX2.Models.Product

@{
    ViewBag.Title = "XoaDuLieu";
}

<h2>Xác nhận xóa</h2>

<h3>Bản có chắc muốn xóa sản phẩm này?</h3>
<div>
    <h4>Thông tin sản phẩm</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mã sản phẩm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductID)
        </dd>

        <dt>
            Tên sản phẩm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt>
            Danh mục sản phẩm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Catalogy.CatalogyName)
        </dd>
        <dt>
            Giá nhập
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PurchasePrice)
        </dd>

        <dt>
            Giá bán
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
            Số lượng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Quantity)
        </dd>

        <dt>
            Năm sản xuất
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Vintage)
        </dd>

        <dt>
            Hình ảnh
        </dt>

        <dd>
            @{
                string path = "~/HinhAnh/" + Model.Image;
            }
            <img src="@Url.Content(path)" alt="Lỗi hiện ảnh" width="100" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Region)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Region)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "XemDanhSach")
        </div>
    }
</div>
